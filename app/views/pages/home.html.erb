<div class="container">
  <div class="row mt-5">
    <div class="col mt-2">
    <br>
    <h3 class="text-center">Des millions de petites annonces et autant d’occasions de se faire plaisir</h3>
    <!--search bar-->
    <form class="bg-light border mt-4">
      <div class="custom-control custom-radio custom-control-inline mt-4 ml-4">
        <input type="radio" id="customRadioInline1" name="customRadioInline1" class="custom-control-input">
        <label class="custom-control-label" for="customRadioInline1">Offres</label>
      </div>
      <div class="custom-control custom-radio custom-control-inline">
       <input type="radio" id="customRadioInline2" name="customRadioInline1" class="custom-control-input">
       <label class="custom-control-label" for="customRadioInline2">Demandes</label>
      </div>
      <div class="form-row mt-3 d-flex justify-content-center">
        <div class="form-group col-md-3">
          <select id="inputState" class="form-control">
            <option selected>Catégories</option>
            <option>...</option>
          </select>
        </div>
        <div class="form-group col-md-4">
          <input type="text" class="form-control" placeholder="Que recherchez-vous?" id="inputZip">
        </div>
        <div class="form-group col-md-4">
          <input type="text" class="form-control" placeholder="Saisissez une ville et un rayon" id="inputZip">
        </div>
      </div>
      <div class="form-group">
      </div>
      <div class="form-group col-md-2 ml-3">
        <button class="btn btn-primary">Prix</button>
      </div>
      <!-- Rounded switch -->
      <div class="form-group col-md-auto ml-3">
        <input type="checkbox" checked data-toggle="toggle">
        <span>Voir également les annonces disponibles en livraison</span>
      </div>
      </form>
    <!--three buttons-->
    <div class="option rounded-pill">
      <button type="button" class="btn btn-primary"><%= link_to "Recherche", products_path, class:"text-white" %></button>
    </div>

    </div>
  </div>
</div>
