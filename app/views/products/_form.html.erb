  <%= simple_form_for(@product) do |f| %>
  <div class="product-form">
    <%= f.input :name, label: 'Name', error: 'Title is mandatory, please specify one', input_html: { class: 'product-form-input'} %>
    <%= f.input :description, label: 'Description', error: 'Content is mandatory !', input_html: { class: 'product-form-input'} %>
    <%= f.input :price, input_html: { class: 'product-form-input'} %>
    <%= f.button :submit, "Create a product", class: 'product-form-submit'%>
  </div>
<% end %>
